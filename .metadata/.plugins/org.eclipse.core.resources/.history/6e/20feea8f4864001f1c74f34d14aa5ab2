package LoopingTesting;

public class FamilyMembers {

	public static void main(String[] args) {
		
		String[] FamilyMembers = {"Md Iliyaz", "Md Ijaz", "Md Imtiyaz", "Md Samad", "Md Faizan"};
		boolean[] isMarried = {true, true, false, false, false};
		
		  for (int i = 0; i < FamilyMembers.length; i++) {
	            String name = FamilyMembers[i];
	            boolean married = isMarried[i];
	            String maritalStatus = married ? "married" : "unmarried";

               System.out.println(name + "is"  +  maritalStatus + "." );
	
		}
	}

}
